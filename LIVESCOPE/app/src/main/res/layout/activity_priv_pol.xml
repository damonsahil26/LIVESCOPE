<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trainedge.livescope.priv_pol">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:layout_marginRight="22dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textAllCaps="true"
                android:textColor="@color/about_github_color"
                android:textSize="20sp"
                tools:text=" LiveScope is the easiest way to start or watch a live video  broadcast. Live Streaming is one of the Services covered by the Privicy Policy, which describes how we treat your information when you use our products and services, including LiveScope. " />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LiveScope is designed to help you broadcast video publically all around the  world."
                android:textAllCaps="true"
                android:textColor="@color/about_github_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="361dp"
                android:layout_height="380dp"
                android:text="When you broadcast a video,your broadcast is public by default. This includes the metadata provides with your broadcast,such as when and where you broadcast. When you watch other's broadcast,information regading when you watched the video (for example, either live or on replay) and ny comments you make on the video is also pubic. We provide you with tools to save and delet your broadcasts.  "
                android:textAllCaps="true"
                android:textColor="@color/about_github_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We provides you with the option to share your broadcast only with those Periscope followers you invite. "
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
